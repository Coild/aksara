<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/keluar"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="151dp"
        android:text="Keluar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belajar" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="246dp"
        android:layout_marginBottom="54dp"
        android:text="Latihan"
        app:layout_constraintBottom_toTopOf="@+id/belajar"
        app:layout_constraintEnd_toEndOf="@+id/belajar"
        app:layout_constraintStart_toStartOf="@+id/belajar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/belajar"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="55dp"
        android:text="Belajar"
        app:layout_constraintBottom_toTopOf="@+id/keluar"
        app:layout_constraintEnd_toEndOf="@+id/keluar"
        app:layout_constraintStart_toStartOf="@+id/keluar"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>